<!DOCTYPE html>
<html>
  <head>
    <title>Animal medication dairy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!--天気API-->
    <script>
      let OWM_API_KEY="<%= ENV['OWM_API_KEY'] %>"
    </script>
    <!--favicon-->
    <%= favicon_link_tag('favicon.ico') %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdn.jsdelivr.net/npm/jquery-jpostal-ja@2.14.34/jquery.jpostal.min.js"></script>

    <style type="text/css">
      .jumbotron {
        background:url(<%= asset_path 'top.jpg' %>) center no-repeat;
        background-size: cover;
      }
    </style>
  </head>

  
  <body class="d-flex flex-column vh-100">
    
    <!--header-->
    <header class="shadow-sm sticky-top">
      <%= render 'layouts/header' %>
    </header>
    
    
    
    <main class="mb-auto">
      <%= yield %>
    </main>
    
    
    <!--fooder-->
    <footer class="bg-dark text-white pt-5 pb-4">
      <%= render 'layouts/fooder' %>
    </footer>
  
  </body>

</html>


