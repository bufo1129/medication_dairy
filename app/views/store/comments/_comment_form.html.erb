<%= form_with model:[medication,comment], url: medication_comments_path(medication.id), local: false do |f| %>
  <%= f.hidden_field :medication_id, value: medication.id %>
  <div class="form-group", style="width:100%;">
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに（最大140字まで）", class: "form-control comment_textarea" %>
  </div>
  <div class="text-right">
    <%= button_tag :type => "submit", :class =>"btn btn-info" do %>
      <i class="fas fa-paper-plane"></i>
    <% end %>
  </div>
<% end %>