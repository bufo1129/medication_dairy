<div class="nested-fields">
  <div class="row mx-auto">
    <div class="col-5"><%= f.text_field :dosage_indicated, class: "form-control", placeholder: "材料" %></div>
    <div class="offset-1 col-2"><%= f.select :number_of_time_id, NumberOfTime.all.map{|o| ["#{o.name} #{o.dosing_times}", o.id]}, { include_blank: "--選択してください--" }, class: "form-control", id: "dosing_times" %></div>
    <div class="offset-1 col-1 px-0 w-auto">
      <%= link_to_remove_association "削除", f, class: "btn btn-secondary btn-block" %>
    </div>
  </div>
</div>