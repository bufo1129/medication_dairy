

<div class="text-center mb-5"></div>

<div class = "container" >
  <div class = "row" >
    <div class = "col-sm-12 col-md-8 col-lg-6 px-5 col-xl-6  px-sm-0 mx-auto">

      <h2 class="font-weight-bold col-3 ml-4 mb-4 text-nowrap"><%= @medication.individual.name %>の投薬記録詳細</h2>
      <h4 class="text-success"><%= flash[:notice] %></h4>

      <div class="text-right">
        <% if current_store != @each_store %>
          <%= link_to edit_medication_path, class: "btn rounded-circle btn-info" do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to  medication_path(@medication.id), method: :delete,
              data: { confirm: "本当に削除しますか？" }, class: "btn rounded-circle btn-danger" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>

      <table class="table">
        <tr>
          <th><strong>個体名：</strong></th>
          <td>
            <%= link_to individual_path(@medication.individual_id) do %>
              <%= @medication.individual.name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th><strong>動物種：</strong></th>
          <td>
            <%= @medication.individual.seed.name %>
          </td>
        </tr>
        <tr>
          <td><strong>投薬開始日：</strong><%= @medication.dosing_start_date %></td>
          <td><strong>投薬終了予定日：</strong><%= @medication.dosing_end_date %></td>
        </tr>
        <tr>
          <td><strong>投薬ステータス：</strong></td>
          <td>
            <% if @medication.medication_status == false %>
              <span class="font-weight-bold text-success">投薬終了</span>
            <% else %>
              <span class="font-weight-bold text-danger">投薬中</span>
            <% end %>
          </td>
        </tr>
        <tr>
          <td><strong>症状：</strong></td>
          <td>
            <%= @medication.condition %>
          </td>
        </tr>
        <tr>
          <td><strong>備考：</strong></td>
          <td>
            <%= @medication.body %>
          </td>
        </tr>
      </table>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>薬名</th>
            <th>投薬回数</th>
            <th>指示量</th>
            <th>体重</th>
            <th>投薬日数</th>
            <th>１回に必要な錠剤の個数</th>
            <th>溶かす液量</th>
          </tr>
        </thead>
        <tbody>
          <% @medication.medicine_records.each do |medicine_record| %>
            <tr>
              <td>
                <%= medicine_record.medicine.name %>
              </td>
              <td>
                <%= medicine_record.number_of_time.name %>
              </td>
              <td><%= medicine_record.dosage_indicated %></td>
              <td><%= @medication.weight %>　kg</td>
              <td><%= @medication.several_days %>　日間</td>
              <td><%= @medication.number_of_tablets %> 個</td>
              <td><%= @medication.liquid_amount %> ml</td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center">
        <%= link_to '<<', medications_path, class: "btn btn-light rounded-circle" %>
      </div>
    </div>
  </div>
</div>