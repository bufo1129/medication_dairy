<div class="mb-5"></div>
<div class="container">
  <h4 class="text-success"><%= flash[:notice] %></h4>
  <div class="row">
    <%#= render 'store/homes/store' %>
    <%= render 'store/homes/accordion' %>
    <div class="col-lg-8">
      <h3 class="font-weight-bold col-3 ml-4 mb-4 text-nowrap">日報一覧</h3>
      <table class="table table-hover">
        <thead class="table-dark">
          <%= link_to '新しい順', dairies_path(latest: "true") %>
         |<%= link_to '古い順', dairies_path(old: "true") %>
          <tr>
            <th scope="col"></th>
            <th scope="col">日付</th>
            <th scope="col">店舗名</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>

        <tbody class="table">
          <% @dairies.each do |dairy| %>
          <tr>
            <td class="h5">
              <%= link_to dairy_path(dairy.id),class: "btn btn-info " do %>
                <i class="fas fa-file-alt"></i>
              <% end %>
            </td>
            <td class="h5">
              <%= dairy.created_date %>
            </td>
            <td class="h5">
              <%= dairy.store.name %>
            </td>
            <td class="h5">
              <%= dairy.medication_id %>
            </td>
            <td class="h5">
              <% if dairy.store == current_store %>
                <%= link_to dairy_path(dairy.id),
                            class: "btn btn-danger ", method: :delete,
                            data: { confirm: "本当に削除しますか？" } do %>
                            <i class="fas fa-trash-alt"></i>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @dairies, theme: 'twitter-bootstrap-4' %>
</div>
