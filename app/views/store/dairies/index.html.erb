



<div class="text-center mb-5"></div>

<h4 class="text-success"><%= flash[:notice] %></h4>
<h4 class="text-danger"><%= flash[:alert] %></h4>
<div class="container-fluid">
  <div class="row d-flex justify-content-center mx-auto">
    <div class="col-lg-2">
      <%#= render 'store/homes/store', stores: @stores %>
    </div>

    <div class="contents-area col-lg-8 col-md-8">
      <div class="text-center mt-3 mb-5">
        <% if params[:store_id] %>
          <span class="h2 mt-2 mb-2"><strong><%= @store.name %>一覧</strong></span><span class="h5"> (全<%#= @dairies_all.count %>件)</span>
        <% else %>
          <span class="h2 mt-2 mb-2"><strong>日報一覧</strong></span><span class="h5"> (全<%#= @dairies_all.count %>件)</span>
        <% end %>
      </div>

      <div class="text-right ">
        <%= link_to new_dairy_path, class: "btn btn-{themecolor}.rounded-circle.p-0 btn-success border border-2 ", method: :get do %>
          <i class="fas fa-plus"></i>日報作成
        <% end %>
      </div>

      <div class="text-center mb-3"></div>

    <!--  <div class="individuals-list d-flex flex-wrap">-->
