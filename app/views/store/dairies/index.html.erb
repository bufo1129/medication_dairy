    <!--      <p class="m-2"><strong>名前：</strong><%= dairy.store.name %></p>-->
    <!--    <% end %>-->
    <!--    </div>-->
    <!--  <% end %>-->
    <!--</div>-->
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-dark">
            <%= link_to '新しい順', dairies_path(latest: "true") %>
           |<%= link_to '古い順', dairies_path(old: "true") %>
            <tr>
              <th scope="col"></th>
              <th scope="col">日付</th>
              <th scope="col">店舗名</th>
              <th scope="col"></th>
              <th scope="col"></th>
            </tr>
          </thead>
    
          <tbody class="table">
            <% @dairies.each do |dairy| %>
            <tr>
              <td class="h5">
                <%= link_to dairy_path(dairy.id),class: "btn btn-primary " do %>
                  <i class="fas fa-file-alt"></i>
                <% end %>
              </td>
              <td class="h5">
                <%= dairy.created_date %>
              </td>
              <td class="h5">
                <%= dairy.store.name %>
              </td>
              <td class="h5">
                <%= dairy.medication_id %>
              </td>
              <td class="h5">
                <% if dairy.store == current_store %>
                  <%= link_to dairy_path(dairy.id),
                              class: "btn btn-danger", method: :delete,
                              data: { confirm: "本当に削除しますか？" } do %>
                              <i class="fas fa-trash-alt"></i>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      <%= paginate @dairies, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
</div>
