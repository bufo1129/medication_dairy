<div class="text-center mb-5"></div>

<div class="container">
  <!--<div class="row">-->
  <!--  <%#= render 'layouts/errors', obj: @genre %>-->
  <!--</div>-->

<h3 class="font-weight-bold col-3 ml-4 mb-4 text-nowrap">日報一覧</h3>
<h4 class="text-danger"><%= flash[:alert] %></h4>

<div class="text-center mb-5"></div>
  <%= link_to "日報作成する", new_dairy_path, class: "btn btn-success" %>
<div class="text-center mb-5"></div>
<div class="table-responsive">
  <table class="table">
      <thead class="table-dark">
        <%= link_to '新しい順', dairies_path(latest: "true") %>
       |<%= link_to '古い順', dairies_path(old: "true") %>
        <tr>
          <th scope="col">日付</th>
          <th scope="col">店舗名</th>
          <th scope="col">投薬記録</th>
          <th scope="col"></th>
        </tr>
      </thead>

      <tbody class="table table-hover">
        <% @dairies.each do |dairy| %>
        <tr>
          <td class="h5">
            <%= link_to dairy_path(dairy.id) do %>
              <%= dairy.created_date %>
            <% end %>
          </td>
          <td class="h5">
            <%= dairy.store.name %>
          </td>
          <td class="h5">
            <%= dairy.medication_id %>
          </td>
          <td class="h5">
            <% if dairy.store == current_store %>
              <%= link_to dairy_path(dairy.id),
                          class: "btn btn-danger", method: :delete,
                          data: { confirm: "本当に削除しますか？" } do %>
                          <i class="fas fa-trash-alt"></i>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <%= paginate @dairies, theme: 'twitter-bootstrap-4' %>
  </div>
</div>