<% if @model == "user" %>
<div class="row  justify-content-center">
  <h2>店舗 一覧</h2>
</div>
<div class="row  justify-content-center">
  <% @datas.each do |datas| %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>店舗名</th>
      </tr>
    </thead>
    <tbody>
        <tr>
            <td>
              <%= link_to datas.name, each_stores_path(datas.id) %>
            </td>
        </tr>
    </tbody>
  </table>
  <% end %>
</div>

<% elsif @model == "muscle"%>
<div class="row  justify-content-center">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>タグ一覧</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= link_to datas.work_tag, muscle_path(datas.id) %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<% else %>
<% end %>
