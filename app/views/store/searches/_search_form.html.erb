<% if store_signed_in? %>
  <%= form_with url: search_path, local: true, method: :get, class: "d-flex" do |f| %>
    <%= f.text_field :word, class: "form-control me-4" %>
    <%= f.select :range, options_for_select([["店舗",'Store'], ["個体",'Individual']]), class: "form-control" %>
    <%= f.select :search, options_for_select([["部分一致","partial_match"],["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"]]) %>
    <%= f.submit "検索", class: "btn btn-primary my-1 my-sm-0" %>
  <% end %>
<% end %>