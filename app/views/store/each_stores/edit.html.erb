<div class="text-center mb-5"></div>

<div class="container mt-5">
  <h3>
  <span style="background-color: #c0c0c0;"><%= @each_store.name %> 情報編集画面</span>
  </h3>
  <div class="text-center mb-5"></div>

  <%= form_with(model: @each_store, url: each_store_path(@each_store), method: :patch, local: true, class: "edit_each_store") do |f| %>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label for="customer_name">店舗名</label>
          <%= f.text_field :name, class: "form-control", placeholder: "店舗名" %>
        </div>
        <div class="form-group">
          <label for="customer_email">メールアドレス</label>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="customer_post_code">郵便番号</label>
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="customer_address">住所</label>
          <%= f.text_field :address, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="customer_phone_number">電話番号</label>
          <%= f.text_field :phone_number, class: "form-control" %>
        </div>
        <%= f.submit "更新する", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
