<div class="text-center mb-5"></div>

<div class="container-fluid">
  <div class="row d-flex justify-content-center mx-auto">

    <div class="col-lg-2">
      <%= render 'store/homes/link' %>
    </div>

    <div class="contents-area col-lg-8 col-md-8">

      <div class="text-center mb-3"></div>

      <div class="col-xl-10 col-lg-12 col-md-12">
        <%= render 'layouts/errors', obj: @each_store %>
        <h4 class="text-success"><%= flash[:notice] %></h4>
        <h4 class="text-danger"><%= flash[:alert] %></h4>

        <div class="col-lg-8 col-xs-12 col-lg-12">
          <h2 class="mb-4 border-bottom border-dark"><strong><%= @each_store.name %> 情報編集</strong></h2>
        </div>

          <%= form_with(model: @each_store, url: each_store_path(@each_store), method: :patch, local: true, class: "edit_each_store") do |f| %>
            <div class="row">

              <div class="col-md-6">

                <div class="form-group">
                  <label for="customer_name">店舗名</label>
                  <%= f.text_field :name, class: "form-control", placeholder: "店舗名" %>
                </div>
                <div class="form-group">
                  <label for="customer_email">メールアドレス</label>
                  <%= f.text_field :email, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="customer_post_code">郵便番号</label>
                  <%= f.text_field :postal_code, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="store_prefecture_code">都道府県</label>
                  <%= f.collection_select :prefecture_code,JpPrefecture::Prefecture.all,
                  :code, :name,  { prompt: '選択してください' }, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <label for="store_address_city">市町村</label>
                  <%= f.text_field :address_city, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="store_address_street">番地</label>
                  <%= f.text_field :address_street, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="store_address_building">建物名</label>
                  <%= f.text_field :address_building, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="customer_phone_number">電話番号</label>
                  <%= f.text_field :phone_number, class: "form-control" %>
                </div>
                <div class="text-right">
                  <%= f.submit "更新する", class: "btn btn-info" %>
                </div>

              </div>

            </div>
          <% end %>

        <div class="text-center">
            <%= link_to '<<', each_stores_path, class: "btn btn-light rounded-circle" %>
          </div>

      </div>

  </div>
</div>

