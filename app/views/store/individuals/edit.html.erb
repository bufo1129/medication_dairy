<div class="text-center mb-5"></div>

<div class="container mt-5">
  <h3><span><%= @individual.name %> 情報編集画面</span></h3>
  <h4 class="text-danger"><%= flash[:alert] %></h4>
  <div class="text-center mb-5"></div>

  <%= form_with(model: @individual, url: individual_path(@individual), method: :patch, local: true, class: "edit_individual") do |f| %>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label for="individual_image">画像</label>
            <%#= f.file_field :image, accept: "image/*", class: "form-control-file individual_image" %>
          </div>
        <div class="form-group">
          <label for="customer_name">個体名</label>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="customer_email">動物種</label>
          <%= f.select :seed_id, Seed.all.map{|o| [o.name, o.id]}, { include_blank: "--選択してください--" }, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="customer_post_code">生年月日</label>
          <%= f.date_field :birthday, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="customer_address">年齢</label>
          <%= f.text_field :age, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="customer_phone_number">体重</label>
          <%= f.text_field :weight, class: "form-control" %>
        </div>
        <%= f.submit "更新する", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>