<!--スペース用-->
<div class="mb-5"></div>

<div class="container my-4" id="medicine-edit">
  <%= render 'layouts/errors', obj: @individual %>
  <h4 class="text-success"><%= flash[:notice] %></h4>
  <h4 class="text-danger"><%= flash[:alert] %></h4>
  <h2 class="mb-4 border-bottom border-dark"><strong>新規個体登録</strong></h2>
  
  <%= form_with model: @individual, url: individuals_path, method: :post, local: true do |f| %>
    <div class="row">
      
      <div class="col-md-6">
        <div class="form-group">
        <div class="form-group">
          <label for="individual_image">画像</label>
          <%= f.file_field :image, accept: "image/*", class: "form-control-file individual_image" %>
        </div>
        <div class="form-group">
          <label for="individual_name">個体名</label>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="seed_id">動物種</label>
          <%= f.select :seed_id, Seed.all.map{|o| [o.name, o.id]}, { include_blank: "--選択してください--" }, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="seed_id">所属店舗</label>
          <%= f.select :store_id, Store.all.map{|o| [o.name, o.id]}, { include_blank: "--選択してください--" }, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="individual_birthday">生年月日</label>
          <%= f.date_field :birthday, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="individual_age">年齢</label>
          <%= f.text_field :age, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="individual_weightr">体重(kg)</label>
          <%= f.text_field :weight, class: "form-control" %>
        </div>
        <div class="text-right">
         <%= f.submit "登録する", class: "btn btn-info" %>
        </div>
      </div>
    </div>
  
    </div>
  <% end %>

</div>