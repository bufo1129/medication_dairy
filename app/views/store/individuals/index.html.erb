
<div class="text-center mb-5"></div>

<h4 class="text-success"><%= flash[:notice] %></h4>
<h4 class="text-danger"><%= flash[:alert] %></h4>
<div class="container-fluid">
  <div class="row d-flex justify-content-center mx-auto">
    <div class="col-lg-2">
      <%= render 'store/homes/seed', seeds: @seeds %>
    </div>

    <div class="contents-area col-lg-8 col-md-8">
      <div class="text-center mt-3 mb-5">
        <% if params[:seed_id] %>
          <span class="h2 mt-2 mb-2"><strong><%= @seed.name %>一覧</strong></span><span class="h5"> (全<%= @individuals_all.count %>件)</span>
        <% else %>
          <span class="h2 mt-2 mb-2"><strong>個体一覧</strong></span><span class="h5"> (全<%= @individuals_all.count %>件)</span>
        <% end %>
      </div>

      <div class="text-right ">
        <%= link_to new_individual_path, class: "btn btn-{themecolor}.rounded-circle.p-0 btn-success border border-2 ", method: :get do %>
          <i class="fas fa-plus"></i>新規個体登録
        <% end %>
      </div>

      <div class="text-center mb-3"></div>

      <div class="individuals-list d-flex flex-wrap">
        <% @individuals.each do |individual| %>
        <div class="individual col-lg-3 col-md-6 mx-0">
        <%= link_to individual_path(individual), class: "text-dark" do %>
          <%= image_tag individual.get_image(200,200),class: "img-fluid" %><br>
          <p class="m-2"><strong>名前：</strong><%= individual.name %></p>
          <p class="m-2"><strong>種類：</strong><%= individual&.seed&.name %></p>
          <p class="m-2"><strong>店舗：</strong><%= individual.store.name %></p>
          <p class="m-2">
            <% if individual.medication_status == false %>
              <span class="font-weight-bold text-success">投薬終了</span>
            <% else %>
              <span class="font-weight-bold text-danger">投薬中</span>
            <% end %>
          </p>
        <% end %>
        </div>
      <% end %>
    </div>
    <div class="pagination justify-content-center mt-3 mb-3">
    <%= paginate @individuals, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
</div>