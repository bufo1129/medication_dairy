<div class="mb-5"></div>
<div class="container">
  <h4 class="text-success"><%= flash[:notice] %></h4>
  <div class="row">
    <%= render 'admin/homes/accordion' %>
    <div class="col-lg-9">
      <h3 class="font-weight-bold col-3 ml-4 mb-4 text-nowrap">店舗一覧</h3>
      <table class="table">
        <thead class="table-dark">
          <tr>
            <th scope="col">店舗名</th>
            <th scope="col">メールアドレス</th>
            <th scope="col">電話番号</th>
            <th scope="col">住所</th>
            <th scope="col">店舗ステータス</th>
          </tr>
        </thead>
        <tbody class="table table-hover">
          <% @stores.each do |store| %>
          <tr>
            <td>
              <%= link_to admin_store_path(store.id) do %>
                <%= store.name %>
              <% end %>
            </td>
            <td>
              <%= store.email %>
            </td>
            <td>
              <%= store.phone_number %>
            </td>
            <td>
              <%= store.prefecture_name %>
              <%= store.address_city %>
              <%= store.address_street %>
              <%= store.address_building %>
            </td>
            <td>
              <% if store.is_deleted == false %>
                <span class="font-weight-bold text-success">有効</span>
              <% else %>
                <span class="font-weight-bold text-danger">無効</span>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%#= paginate @stores, theme: 'twitter-bootstrap-4' %>
</div>