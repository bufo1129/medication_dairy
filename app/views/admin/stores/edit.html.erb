<!--スペース用-->
<div class="mb-5"></div>

<div class="container-fluid">

  <div class="row d-flex justify-content-center">

      <div class="col-xl-2 col-lg-3 col-md-8 mr-3">
          <%= render 'admin/homes/link' %>
      </div>

      <div class="contents-area col-lg-7 rounded px-5 mb-4">
        <%= render 'layouts/errors', obj: @store %>
        <h4 class="text-success"><%= flash[:notice] %></h4>
        <h4 class="text-danger"><%= flash[:alert] %></h4>

        <div class="row my-4 d-flex justify-content-center">
          <div class="row ">
            <div class="col-xs-12">
              <h2 class="mb-4 border-bottom border-dark"><strong><%= @store.name %> 情報編集</strong></h2>
            </div>
            <div class="col-xl-12 col-xs-12 col-lg-12">

              <%= form_with(model: @store, url: admin_store_path(@store), method: :patch, local: true, class: "edit_store") do |f| %>

                <div class="form-group">
                  <label for="store_id">店舗ID</label>
                  <%= @store.id %>
                </div>
                <div class="form-group">
                  <label for="store_name">店舗名</label>
                  <%= @store.name %>
                </div>
                <div class="form-group">
                  <label for="store_email">メールアドレス</label>
                  <%= @store.email %>
                </div>
                <div class="form-group">
                  <label for="store_post_code">郵便番号</label>
                  <%= f.text_field :postal_code, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="store_prefecture_code">都道府県</label>
                  <%= f.collection_select :prefecture_code,JpPrefecture::Prefecture.all,
                  :code, :name,  { prompt: '選択してください' }, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <label for="store_address_city">市町村</label>
                  <%= f.text_field :address_city, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="store_address_street">番地</label>
                  <%= f.text_field :address_street, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="store_address_building">建物名</label>
                  <%= f.text_field :address_building, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="store_phone_number">電話番号</label>
                  <%= f.text_field :phone_number, class: "form-control" %>
                </div>

                <% if @store.name == 'guestuser'%>
                <label for="store_is_deleted">店舗ステータス</label>
                  <span class="font-weight-bold text-success">有効</span>
                <% else %>
                  <div class="form-group">
                    <label for="store_is_deleted">店舗ステータス</label>
                    <%= f.select :is_deleted, [['有効', false], ['無効', true]], {selected: @store.is_deleted}, {class: "form-control"} %>
                  </div>
                <% end %>
                <div class="text-right">
                  <%= f.submit "更新する", class: "btn btn-info" %>
                </div>

              <% end %>

            </div>
          </div>
        </div>

      </div>
  </div>
</div>