<div class="text-center mb-5"></div>

<h4 class="text-success"><%= flash[:notice] %></h4>
<h4 class="text-danger"><%= flash[:alert] %></h4>
<div class="container-fluid">
  <div class="row d-flex justify-content-center mx-auto">
    <div class="col-lg-2">
      <%= render 'admin/homes/link' %>
    </div>

    <div class="contents-area col-lg-8 col-md-8">

      <div class="text-center mb-3"></div>



      <div class="col-xl-10 col-lg-12 col-md-12">

        <div class="col-lg-8 col-xs-12 col-lg-12">
          <h2 class="mb-4 border-bottom border-dark"><strong>投薬回数の登録</strong></h2>
        </div>

        <div class="col-xl-6 col-lg-6 col-md-6">
          <%= form_with model: @number_of_time, url: admin_number_of_times_path, method: :post, local: true do |f| %>

            <div class="form-group">
              <label for="times_name"><strong>登録名:</strong></label>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <label for="times_name"><strong>回数:</strong></label>
              <%= f.text_field :dosing_times, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.submit "新規登録", class: "btn btn-success" %>
            </div>
          <% end %>
        </div>

        <div class="col-lg-12 col-md-12">
          <table class="table  table-hover">
            <thead class="bg-dark text-light">
              <tr>
                <th scope="col"></th>
                <th scope="col">動物種名</th>
              </tr>
            </thead>
            <tbody>
              <% @number_of_times.each do |number_of_time| %>
              <tr>
                <td class="h5">
                  <%= link_to edit_admin_number_of_time_path(number_of_time.id), class: "text-info" do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                </td>
                <td class="h5"><%= number_of_time.name %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

  </div>
</div>