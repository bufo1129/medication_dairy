<!--スペース用-->
<div class="text-center mb-5"></div>

<div class="container-fluid">
  <div class="row d-flex justify-content-center mx-auto">

    <div class="col-lg-2">
      <%= render 'admin/homes/link' %>
    </div>

    <div class="contents-area col-lg-8 col-md-8">

      <!--スペース用-->
      <div class="text-center mb-3"></div>

      <div class="col-md-12 mx-auto">

        <%= render 'layouts/errors', obj: @individual %>
        <h4 class="text-success"><%= flash[:notice] %></h4>
        <h4 class="text-danger"><%= flash[:alert] %></h4>

        <div class="col-lg-5 mx-auto">
          <%= form_with(model: @individual, url: admin_individual_path(@individual), method: :patch, local: true, class: "edit_individual") do |f| %>
            <h3 class="border-bottom border-dark"><strong><%= @individual.name %> 情報編集画面</strong></h3>
            <div class="form-group">
              <label for="individual_image">画像</label>
                <%= f.file_field :image, accept: "image/*", class: "form-control-file individual_image" %>
              </div>
            <div class="form-group">
              <label for="customer_name">個体名</label>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <label for="customer_email">動物種</label>
              <%= f.select :seed_id, Seed.all.map{|o| [o.name, o.id]}, { include_blank: "--選択してください--" }, class: "form-control" %>
            </div>
            <div class="form-group">
              <label for="seed_id">所属店舗</label>
              <%= f.select :store_id, Store.all.map{|o| [o.name, o.id]}, { include_blank: "--選択してください--" }, class: "form-control" %>
            </div>
            <div class="form-group">
              <label for="customer_post_code">生年月日</label>
              <%= f.date_field :birthday, class: "form-control" %>
            </div>
            <div class="form-group">
              <label for="customer_address">年齢</label>
              <%= f.text_field :age, class: "form-control" %>
            </div>
            <div class="form-group">
              <label for="customer_phone_number">体重</label>
              <%= f.text_field :weight, class: "form-control" %>
            </div>
            <div class="text-right">
              <%= f.submit "更新する", class: "btn btn-info" %>
            </div>
          <% end %>
        </div>

        <div class="text-center"><%= link_to "<<", individuals_path, class: "btn btn-light rounded-circle" %></div>

      </div>

    </div>

  </div>
</div>