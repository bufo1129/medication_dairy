<div class="text-center mb-5"></div>

<div class="container">
  <div class="row">
    <h3 class="font-weight-bold col-3 ml-4 mb-4 text-nowrap">薬の編集</h3>
    <%= form_with model: @medicine, url: admin_medicine_path, method: :patch do |f| %>
    <div class="form-group">
      <label for="medication_name">薬名:</label>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <label for="ingredients_per_tablet">1錠分の成分量:</label>
      <%= f.text_field :ingredients_per_tablet, class: "form-control" %>
    </div>
      <%= f.submit "変更する", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
