<div class="text-center mb-5"></div>
<div class="container">
  <h4 class="text-success"><%= flash[:notice] %></h4>
  <h4 class="text-danger"><%= flash[:alert] %></h4>

  <div class="text-center mb-5"></div>
    <div class="row">
      <div class="col-lg-3 col-md-4">
        <%= form_with model: @medicine, url: admin_medicines_path, method: :post, local: true do |f| %>
        <h3 class="font-weight-bold col-3 ml-4 mb-4 text-nowrap">薬の登録</h3>
      <div class="form-group">
        <label for="times_name"><strong>薬名:</strong></label>
        <%= f.text_field :name, class: "form-control" %>
      </div>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      <% end %>
    </div>
    <div class="col">
      <h3 class="font-weight-bold col-3 ml-4 mb-4 text-nowrap">薬の一覧</h3>
      <table class="table">
        <thead class="table-dark">
          <tr>
            <th scope="col">動物種名</th>
            <th scope="col">1錠分の成分量</th>
          </tr>
        </thead>
        <tbody class="table table-hover">
          <% @medicines.each do |medicine| %>
          <tr>
            <td class="h5"><%= medicine.name %></td>
            <td class="h5"><%= medicine.ingredients_per_tablet %></td>
            <td class="h5">
              <%= link_to edit_admin_medicine_path(medicine.id), class: "btn rounded btn-info" do %>
                <i class="fas fa-edit"></i>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @medicines, theme: 'twitter-bootstrap-4' %>
</div>