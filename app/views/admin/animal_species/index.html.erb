<div class="text-center mb-5"></div>

<div class="container">
  <!--<div class="row">-->
  <!--  <%#= render 'layouts/errors', obj: @genre %>-->
  <!--</div>-->

  <h3 class="font-weight-bold col-3 ml-4 mb-4 text-nowrap">薬の登録</h3>
  <h4 class="text-success"><%= flash[:notice] %></h4>
  <h4 class="text-danger"><%= flash[:alert] %></h4>

  <div class="text-center mb-5"></div>
    <%= form_with model: @animal_specy, url: admin_animal_species_path, method: :post, local: true do |f| %>
      <%= f.label :name, '動物種の登録' %>
      <%= f.text_field :name %>
      <%= f.submit "新規登録", class: "btn btn-outline-success" %>
    <% end %>

<div class="text-center mb-5"></div>

<div class="table-responsive table-hover">
  <table class="table table-hover">
      <thead class="table-dark">
        <tr>
          <th scope="col">動物種一覧</th>
          <th scope="col"></th>
        </tr>
      </thead>

      <tbody>
        <% @animal_species.each do |animal_species| %>
        <tr>
          <td class="h5"><%= animal_species.name %></td>
          <td class="h5">
            <%= link_to "編集する", edit_admin_medicine_path(animal_species.id), class: "btn btn-outline-success" %>
            <%= link_to "削除", admin_animal_specy_path(animal_species.id), method: :delete,
              data: { confirm: "本当に削除しますか？" }, class: "btn btn-outline-danger ml-3" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <%#= paginate @medications, theme: 'twitter-bootstrap-4' %>
  </div>
</div>