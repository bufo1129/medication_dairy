<% if comment.admin_comment_saw?(current_admin) %>
  <p>
    <%= link_to admin_medication_comment_see_path(comment.medication, comment), class: "text-warning", method: :delete do %>
      <i class="fas fa-lightbulb fa-lg"></i>
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to admin_medication_comment_sees_path(comment.medication, comment), class: "text-warning", method: :post do %>
      <i class="far fa-lightbulb fa-lg"></i>
    <% end %>
  </p>
<% end %>