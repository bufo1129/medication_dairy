          <% end %>
        </div>
        <div class="row">
          <%= link_to admin_seeds_path, class: "btn btn-success btn-sm btn-block mb-3" do %>
          <i class="fas fa-paw"></i> 動物種登録
          <% end %>
        </div>
        <div class="row">
          <%= link_to admin_weathers_path, class: "btn btn-success btn-sm btn-block mb-3" do %>
          <i class="fas fa-cloud-sun"></i> 天気登録
          <% end %>
        </div>
        <div class="row">
          <%= link_to admin_individuals_path, class: "btn btn-success btn-sm btn-block mb-3" do %>
            <i class="fas fa-paw"></i> 個体一覧
          <% end %>
        </div>
        <div class="row">
          <%= link_to admin_dairies_path, class: "btn btn-success btn-sm btn-block mb-3" do %>
          <i class="fas fa-book-open"></i> 日報一覧
          <% end %>
        </div>
        <div class="row">
          <%= link_to admin_medications_path, class: "btn btn-success btn-sm btn-block mb-3" do %>
          <i class="fas fa-book-open"></i> 投薬一覧
          <% end %>
        </div>
        <div class="row">
          <%= link_to destroy_store_session_path, method: :delete, class: "btn btn-secondary btn-sm btn-block mb-3" do %>
            <i class="fas fa-sign-out-alt"></i> Log out
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


